<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/dark_primary"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/TextViewCustomFontStyle"
                android:text="@string/team1" />

            <TextView
                android:id="@+id/scoreTextView1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                style="@style/TextViewCustomFontStyle1_2"
                android:text="@string/score_team1"
                android:contentDescription="@string/user_score1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/increase_button_t1"
                style="@style/ButtonCustomStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/increase_button1"
                android:contentDescription="@string/inc_button_desc"
               />

            <Button
                android:id="@+id/decrease_button_t1"
                style="@style/ButtonCustomStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decrease_button1"
                android:contentDescription="@string/dec_button_desc"
                />

        </LinearLayout>

    </LinearLayout>
    <RadioGroup
        android:id="@+id/incrementOptionsRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/divider"
        android:gravity="center"
        >

        <RadioButton
            android:id="@+id/option1RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_button_option1"
            style="@style/RadioButtonStyle"
            />

        <RadioButton
            android:id="@+id/option2RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_button_option2"
            style="@style/RadioButtonStyle"/>

        <RadioButton
            android:id="@+id/option3RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_button_option3"
            style="@style/RadioButtonStyle"/>


    </RadioGroup>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/dark_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/team2"
                style="@style/TextViewCustomFontStyle" />

            <TextView
                android:id="@+id/scoreTextView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                style="@style/TextViewCustomFontStyle1_2"
                android:text="@string/score_team2"
                android:contentDescription="@string/user_score2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <Button
                android:id="@+id/increase_button_t2"
                style="@style/ButtonCustomStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/increase_button2"
                />

            <Button
                android:id="@+id/decrease_button_t2"
                style="@style/ButtonCustomStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decrease_button2"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>